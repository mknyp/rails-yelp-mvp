<h1><%= @restaurant.name %> </h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>

<p>
    <strong>
      Reviews:
    </strong>
  </p>
  <% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <hr>
  <% end %>

<%= link_to 'Back to complete list', restaurants_path(@restaurants),class: "btn btn-primary"  %>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant),class: "btn btn-default" %>
